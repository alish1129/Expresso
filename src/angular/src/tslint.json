{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ]
  },
  "quotemark": [
    true,
    "single",
    "avoid-escape",
    "avoid-template"
  ],
  "type": "array",
  "items": {
    "type": "string",
    "enum": [
      "single",
      "double",
      "jsx-single",
      "jsx-double",
      "avoid-escape",
      "avoid-template"
    ]
  },
  "minLength": 0,
  "maxLength": 5
}
